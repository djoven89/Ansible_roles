<VirtualHost _default_:{{ wordpress_port }}>
    DocumentRoot {{ wordpress_dir }}/{{ wordpress_domain }}/
    ServerName {{ wordpress_port }}
    DirectoryIndex index.php

   	ErrorLog ${APACHE_LOG_DIR}/wordpress_error.log
    CustomLog ${APACHE_LOG_DIR}/wordpress_access.log combined

    <Directory "{{{ wordpress_dir }}/{{ wordpress_domain }}/">
        Require all granted
    </Directory>
</VirtualHost>

